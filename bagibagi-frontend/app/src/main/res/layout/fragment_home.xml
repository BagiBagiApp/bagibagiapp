<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Search Bar -->
        <com.google.android.material.search.SearchBar
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari berdasarkan nama/kategori..."
            android:drawableStart="@drawable/ic_search"/>

        <com.google.android.material.search.SearchView
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Barter and Donasi Counters -->
        <LinearLayout
            android:id="@+id/counters_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="0dp"
                        android:src="@drawable/ic_barter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barter sukses"
                        android:gravity="center" />

                </LinearLayout>
                <TextView
                    android:id="@+id/barter_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24.342"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="0dp"
                        android:src="@drawable/ic_donate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donasi sukses"
                        android:gravity="center" />

                </LinearLayout>
                <TextView
                    android:id="@+id/donate_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24.342"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Recommendations Section -->
        <TextView
            android:id="@+id/recommendation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Rekomendasi barang cuma buat kamu!"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/recommendation_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Cari barang yang recommended untuk kamu barter" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="horizontal"
            tools:listitem="@layout/item_recommended" />

        <!-- Organizations Section -->
        <TextView
            android:id="@+id/organization_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Saling berbagi dengan donasi"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/organization_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Cari yayasan atau organisasi yang membutuhkan" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_organizations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/item_organization" />

    </LinearLayout>
</ScrollView>
